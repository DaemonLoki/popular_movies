<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.MovieDetailActivity">

    <ImageView
        android:id="@+id/iv_movie_poster"
        android:contentDescription="@string/movie_poster"
        android:scaleType="centerCrop"
        android:transitionName="movie_poster_transition"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <View
        android:id="@+id/view_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000"
        android:alpha="0.6" />

    <ImageView
        android:id="@+id/iv_favorite"
        android:src="@drawable/ic_star_empty"
        android:contentDescription="@string/favorite_movie_image"
        android:layout_gravity="end"
        android:layout_width="@dimen/favorite_image_width"
        android:layout_height="@dimen/favorite_image_height"
        android:layout_marginEnd="@dimen/favorite_image_margin"
        android:layout_marginTop="@dimen/favorite_image_margin"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/detail_margin_top"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_sub_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="25dp"
            android:baselineAligned="false">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/whiteText"
                    android:textSize="12sp"
                    android:textStyle="italic"
                    android:text="@string/vote_average" />

                <TextView
                    android:id="@+id/tv_vote_avg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/whiteText"
                    android:textSize="20sp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/whiteText"
                    android:textSize="12sp"
                    android:textStyle="italic"
                    android:textAlignment="viewEnd"
                    android:text="@string/release_date" />

                <TextView
                    android:id="@+id/tv_release_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/whiteText"
                    android:textSize="20sp"
                    android:textAlignment="viewEnd"/>

            </LinearLayout>

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_movie_overview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/whiteText"
                android:textSize="@dimen/overview_text_size"
                android:layout_marginStart="@dimen/overview_text_margin"
                android:layout_marginEnd="@dimen/overview_text_margin"
                android:alpha="1.0"/>

        </ScrollView>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_trailers"
            android:layout_width="match_parent"
            android:layout_height="@dimen/trailers_height" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_reviews"
            android:layout_width="match_parent"
            android:layout_height="@dimen/reviews_height" />

    </LinearLayout>

</FrameLayout>